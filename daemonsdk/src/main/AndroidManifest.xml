<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.revenco.daemonsdk">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>

    <application android:label="@string/app_name">

        <!-- <service android:name=".java.AbsWorkService$WorkNotificationService"/> -->

        <service
            android:name=".java.services.JobSchedulerService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:process=":watch"/>
        <service
            android:name=".java.services.WatchDogService"
            android:process=":watch"/>

        <!-- <service -->
        <!-- android:name=".java.WatchDogService$WatchDogNotificationService" -->
        <!-- android:process=":watch"/> -->

        <service
            android:name=".natives.assistant.assistantService2"
            android:enabled="true"
            android:exported="true"
            android:process=":assistant">
        </service>

        <receiver
            android:name=".natives.assistant.assistantReceiver2"
            android:enabled="true"
            android:exported="true"
            android:process=":assistant">
        </receiver>

        <activity
            android:name=".java.activitys.TransParentActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:finishOnTaskLaunch="false"
            android:launchMode="singleInstance"
            android:process=":keeplive"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        </activity>

        <!-- 通知服务，可以提升app的前台级别 -->
        <service
            android:name=".java.notifys.NotificationMonitor"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService"/>
            </intent-filter>
        </service>

    </application>

</manifest>